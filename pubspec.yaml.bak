name: overseer
description: Personal command-driven assistant for automation and self-evolving systems.
publish_to: "none"

version: 1.0.0+1

environment:
  sdk: ">=3.1.0 <4.0.0"

dependencies:
  # Voice and audio libraries
  speech_to_text: ^6.4.0      # Latest version for speech recognition
  flutter_tts: ^4.1.0         # Updated for improved TTS functionality and bug fixes

  # HTTP and GPT API interaction
  http: ^1.0.0                # Major version update for Dart 3 compatibility

  # JSON configs and local file handling
  path_provider: ^2.2.2       # Updated to include support for latest platforms
  archive: ^3.5.0             # Updated for better compression and decompression features
  flutter:
    sdk: flutter

dev_dependencies:
  flutter_test:
    sdk: flutter

flutter:
  uses-material-design: true

  assets:
    - assets/

  fonts:
    - family: Roboto
      fonts:
        - asset: assets/fonts/Roboto-Regular.ttf
